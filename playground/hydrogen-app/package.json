{
  "name": "hydrogen-app",
  "description": "This the default template for Hydrogen",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "shopify hydrogen dev",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --resolve-plugins-relative-to . --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx src",
    "lint:css": "stylelint ./src/**/*.{css,sass,scss}",
    "build": "pnpm build:client && pnpm build:server && pnpm build:worker",
    "build:client": "vite build --outDir dist/client --manifest",
    "build:server": "vite build --outDir dist/server --ssr @shopify/hydrogen/platforms/node",
    "build:worker": "cross-env WORKER=true vite build --outDir dist/worker --ssr @shopify/hydrogen/platforms/worker",
    "serve": "node --enable-source-maps dist/server",
    "test": "WATCH=true vitest",
    "test:ci": "pnpm build && vitest run",
    "preview": "shopify hydrogen preview"
  },
  "prettier": "@shopify/prettier-config",
  "devDependencies": {
    "@shopify/cli": "3.13.0",
    "@shopify/cli-hydrogen": "3.13.0",
    "@shopify/prettier-config": "1.1.2",
    "@shopify/stylelint-plugin": "11.0.1",
    "@tailwindcss/typography": "0.5.2",
    "autoprefixer": "10.4.7",
    "cross-env": "7.0.3",
    "eslint": "8.17.0",
    "eslint-plugin-hydrogen": "0.12.2",
    "npm-run-all": "4.1.5",
    "playwright": "1.25.0",
    "postcss": "8.4.14",
    "prettier": "2.7.0",
    "stylelint": "14.12.0",
    "tailwindcss": "3.1.1",
    "vite": "3.1.0",
    "vitest": "0.23.2"
  },
  "dependencies": {
    "@headlessui/react": "1.7.0",
    "@shopify/cli-kit": "3.12.0",
    "@shopify/hydrogen": "1.4.1",
    "body-parser": "1.20.0",
    "compression": "1.7.4",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "https": "1.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "react-helmet-async": "1.3.0",
    "serve-static": "1.15.0",
    "typescript": "4.8.3"
  }
}