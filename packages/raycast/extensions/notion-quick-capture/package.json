{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "notion-quick-capture",
  "version": "1.0.0",
  "title": "Notion Quick Capture",
  "description": "A Raycast extension to capture a quick text thought then create a page within a specific Notion database",
  "icon": "command-icon.png",
  "author": "hugivar",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Quick Capture",
      "description": "Quick capture within Notion",
      "mode": "view",
      "preferences": [
        {
          "name": "databaseId",
          "description": "Your databaseId",
          "type": "textfield",
          "title": "What is your database id",
          "required": true
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "title": "Notion token",
      "label": "Notion key",
      "type": "textfield",
      "required": true,
      "description": "Notion api access token"
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "dependencies": {
    "@hugios/notion": "workspace:^",
    "@raycast/api": "^1.48.8",
    "timers": "^0.1.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "20.17.2",
    "@types/react": "18.2.0",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^5.0.0"
  }
}