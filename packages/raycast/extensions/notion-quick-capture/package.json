{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "notion-quick-capture",
  "title": "Notion Quick Capture",
  "description": "A Raycast extension to capture a quick text thought then create a page within a specific Notion database",
  "icon": "command-icon.png",
  "author": "hugivar",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Quick Capture",
      "description": "Quick capture within Notion",
      "mode": "view",
      "preferences": [
        {
          "name": "databaseId",
          "description": "Your databaseId",
          "type": "textfield",
          "title": "What is your database id",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@notionhq/client": "^2.2.1",
    "@raycast/api": "^1.48.8",
    "@tryfabric/martian": "^1.2.4",
    "dotenv": "^16.0.3",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.1",
    "notion-to-md": "^2.5.5",
    "timers": "^0.1.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.15.11",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}